# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 2 spaces indentation, Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Tab indentation
[{Makefile,Makefile.*}]
indent_size = 8
indent_style = tab

# 4 spaces indentation
[*.{h,c}]
indent_size = 4
indent_style = space
